<%- include head %>
<section class="">
	<form class="ui form" action="" @submit.prevent='search' @enter.prevent='search'>
		<div class="ui search">
			<div class="ui icon input">
				<input class="prompt" v-model='key' type="text" placeholder="Search countries...">
				<i class="search icon"></i>
			</div>
		</div>
	</form>

	<div class="ui top attached tabular menu">
		<a class="item active" data-tab="first">First</a>
		<a class="item" data-tab="second">Second</a>
		<a class="item" data-tab="third">Third</a>
	</div>
	<div class="ui bottom attached tab segment active" data-tab="first">
		<table class="ui striped table">
			<thead>
				<tr>
					<th>Song</th>
					<th>Artist</th>
					<th>Album</th>
				</tr>
			</thead>
			<tbody>
				<tr v-for='song of songs'>
					<td><a href="/song/{{song.id}}">{{song.name}}</a></td>
					<td><a href="/artist/{{song.artists[0].id}}">{{song.artists[0].name}}</a></td>
					<td><a href="/album/{{song.album.id}}">《{{song.album.name}}》</a></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="ui bottom attached tab segment" data-tab="second">
		Second
	</div>
	<div class="ui bottom attached tab segment" data-tab="third">
		Third
	</div>


</section>

<%- include foot %>